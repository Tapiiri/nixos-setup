#!/usr/bin/env -S python3
"""Executable entrypoint for `devshell`.

This script is intended to be runnable as a normal executable (including when
symlinked into a PATH directory). The implementation lives in
`scripts_py.devshell` for unit testing.
"""

from __future__ import annotations

import sys
from pathlib import Path


def _bootstrap_repo_root_on_syspath() -> None:
    exe = Path(__file__).resolve()
    cur = exe.parent.parent

    for _ in range(8):
        if (cur / "flake.nix").is_file() and (cur / "scripts_py").is_dir() and (cur / "dev").is_dir():
            sys.path.insert(0, str(cur))
            return
        if cur.parent == cur:
            return
        cur = cur.parent


_bootstrap_repo_root_on_syspath()

from scripts_py.devshell import main  # noqa: E402


if __name__ == "__main__":
    raise SystemExit(main())
