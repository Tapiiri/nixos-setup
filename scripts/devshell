#!/usr/bin/env -S python3
"""Executable entrypoint for `devshell`.

This script is intended to be runnable as a normal executable (including when
symlinked into a PATH directory). The implementation lives in
`scripts_py.devshell` for unit testing.
"""

from __future__ import annotations

import sys


def _bootstrap() -> None:
    from pathlib import Path

    here = Path(__file__).resolve()
    sys.path.insert(0, str(here.parent.parent))

    from scripts_py.utils import RepoMarkers, bootstrap_repo_import_path

    bootstrap_repo_import_path(
        script_file=here,
        markers=RepoMarkers(files=("flake.nix",), dirs=("scripts_py", "dev")),
    )


_bootstrap()

from scripts_py.devshell import main  # noqa: E402


if __name__ == "__main__":
    raise SystemExit(main())
